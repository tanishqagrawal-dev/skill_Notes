rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // --- Public Notes System ---
    match /notes/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /notes_uploads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- Personal Private Drive ---
    // If you need strict privacy for the Personal Drive later, move this 
    // ABOVE the catch-all rule. For now, the catch-all allows the app to work.
    match /personal_notes/{userId}/{allPaths=**} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
