rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // --- Public Notes System ---
    // This allows anything uploaded by logged-in users (Admins, Co-Admins, and Students)
    // to be readable by everyone.
    // --- Notes Storage Rules ---
    match /notes/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                  && request.resource.contentType == 'application/pdf'
                  && request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }

    // --- Personal Private Drive ---
    // If you need strict privacy for the Personal Drive later, move this 
    // ABOVE the catch-all rule. For now, the catch-all allows the app to work.
    match /personal_notes/{userId}/{allPaths=**} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
