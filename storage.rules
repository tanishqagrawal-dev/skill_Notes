rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Standard Notes Uploads (Public Read)
    match /notes/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- Personal Notes (Private Drive) ---
    // Strict isolation: Only the owner can read/write their folder
    match /personal_notes/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }
  }
}
