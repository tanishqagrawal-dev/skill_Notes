rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }
    
    function isAdmin() {
      return hasRole('superadmin') || hasRole('admin');
    }
    
    function isCoAdmin() {
      return hasRole('coadmin');
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isSignedIn(); // Users can read basic profiles (for comments etc)
      allow create: if isSignedIn() && isOwner(userId); // Initial sign up
      allow update: if isAdmin() || isOwner(userId); // Only Admin can change roles/colleges
      allow delete: if isAdmin();
      
      // Strict Role Protection: Users cannot escalate their own privileges
      // (This validation logic assumes client doesn't send role/college updates, 
      // but strictly, we should validate `request.resource.data.role` hasn't changed if not admin)
    }

    // --- Co-Admins Collection (Audit Log / List) ---
    match /coadmins/{userId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // --- Notes Pending ---
    match /notes_pending/{noteId} {
      allow read: if isAdmin() || 
                  (isCoAdmin() && (resource.data.collegeId == getUserData().collegeId || resource.data.college == getUserData().college)) ||
                  (isSignedIn() && resource.data.uploaderUid == request.auth.uid);
                  
      allow create: if isSignedIn(); // Anyone can upload
      
      allow update: if isAdmin() || 
                    (isCoAdmin() && (resource.data.collegeId == getUserData().collegeId || resource.data.college == getUserData().college));
                    
      allow delete: if isAdmin() || 
                    (isCoAdmin() && (resource.data.collegeId == getUserData().collegeId || resource.data.college == getUserData().college));
    }

    // --- Notes Approved ---
    match /notes_approved/{noteId} {
      allow read: if true; // Public access to approved notes
      allow create: if isAdmin() || (isCoAdmin() && (request.resource.data.collegeId == getUserData().collegeId || request.resource.data.college == getUserData().college));
      allow update: if isAdmin() || (isCoAdmin() && (resource.data.collegeId == getUserData().collegeId || resource.data.college == getUserData().college));
      allow delete: if isAdmin();
    }
    
    // --- Stats ---
    match /stats/{statId} {
      allow read: if true;
      allow create, update: if (request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['views', 'downloads', 'students', 'notes'])) || isAdmin() || isCoAdmin();
      allow delete: if isAdmin();
    }

    // --- Support Queries ---
    match /support_queries/{queryId} {
      allow create: if true; // Public contact form
      allow read, update, delete: if isAdmin();
    }
    // --- Private Drive ---
    match /privateDrive/{userId}/{document=**} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // --- Presence ---
    match /presence/{userId} {
      allow read: if true; // Needed to count online students
      allow write: if isSignedIn() && isOwner(userId);
    }

    // --- User Stats ---
    match /user_stats/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // --- Notifications ---
    match /notifications/{notifId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isAdmin() || isCoAdmin(); // Only authorized can send
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid; // For marking as read
      allow delete: if isAdmin();
    }
    // --- Role Invites ---
    match /role_invites/{emailId} {
      allow read, delete: if isSignedIn(); // TODO: Re-tighten after debugging invite claiming
      allow write: if isAdmin();
    }
  }
}
