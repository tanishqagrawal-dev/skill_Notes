rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }
    
    function isAdmin() {
      return hasRole('superadmin') || hasRole('admin');
    }
    
    function isCoAdmin() {
      return hasRole('coadmin');
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isSignedIn(); // Users can read basic profiles (for comments etc)
      allow create: if isSignedIn() && isOwner(userId); // Initial sign up
      allow update: if isAdmin() || isOwner(userId); // Only Admin can change roles/colleges
      allow delete: if isAdmin();
      
      // Strict Role Protection: Users cannot escalate their own privileges
      // (This validation logic assumes client doesn't send role/college updates, 
      // but strictly, we should validate `request.resource.data.role` hasn't changed if not admin)
    }

    // --- Co-Admins Collection (Audit Log / List) ---
    match /coadmins/{userId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // --- Notes Pending ---
    match /notes_pending/{noteId} {
      allow read: if isAdmin() || 
                  (isCoAdmin() && resource.data.college == getUserData().assignedCollege) ||
                  (isSignedIn() && resource.data.uploaderUid == request.auth.uid);
                  
      allow create: if isSignedIn(); // Anyone can upload
      
      allow update: if isAdmin() || 
                    (isCoAdmin() && resource.data.college == getUserData().assignedCollege);
                    
      allow delete: if isAdmin() || 
                    (isCoAdmin() && resource.data.college == getUserData().assignedCollege);
    }

    // --- Notes Approved ---
    match /notes_approved/{noteId} {
      allow read: if true; // Public access to approved notes
      allow create: if isAdmin() || isCoAdmin(); // Only moved by admins
      allow update: if isAdmin(); // Only admin can edit approved content
      allow delete: if isAdmin();
    }
    
    // --- Stats ---
    match /stats/{statId} {
      allow read: if true;
      allow update: if (request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['views', 'downloads'])) || isAdmin() || isCoAdmin();
      allow create, delete: if isAdmin();
    }

    // --- Support Queries ---
    match /support_queries/{queryId} {
      allow create: if true; // Public contact form
      allow read, update, delete: if isAdmin();
    }
  }
}
