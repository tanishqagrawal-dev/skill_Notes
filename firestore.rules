rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }
    
    function isAdmin() {
      return hasRole('superadmin') || hasRole('admin');
    }
    
    function isCoAdmin() {
      return hasRole('coadmin');
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isSignedIn(); // Users can read basic profiles (for comments etc)
      allow create: if isSignedIn() && isOwner(userId); // Initial sign up
      allow update: if isAdmin() || isOwner(userId); // Only Admin can change roles/colleges
      allow delete: if isAdmin();
      
      // Strict Role Protection: Users cannot escalate their own privileges
      // (This validation logic assumes client doesn't send role/college updates, 
      // but strictly, we should validate `request.resource.data.role` hasn't changed if not admin)
    }

    // --- Co-Admins Collection (Audit Log / List) ---
    match /coadmins/{userId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // --- Notes Collection (Unified) ---
    match /notes/{noteId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isAdmin() || isOwner(resource.data.uploaderUid);
      allow delete: if isAdmin() || isOwner(resource.data.uploaderUid);
    }

    // --- Legacy Collections (Optional/Deprecated) ---
    match /notes_pending/{noteId} {
      allow read, write: if true; 
    }
    match /notes_approved/{noteId} {
      allow read, write: if true;
    }
    
    // --- Stats ---
    match /stats/{statId} {
      allow read: if true;
      allow create, update: if (request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['views', 'downloads', 'students', 'notes'])) || isAdmin() || isCoAdmin();
      allow delete: if isAdmin();
    }

    // --- Support Queries ---
    match /support_queries/{queryId} {
      allow create: if true; // Public contact form
      allow read, update, delete: if isAdmin();
    }
    // --- Private Drive ---
    // User-scoped storage for files, AI notes, etc.
    match /privateDrive/{userId}/{document=**} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

  }
}
